<?xml version="1.0" encoding="UTF-8"?>

<logger name="org.hibernate">
  <level value="warn"/> 
</logger>

<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="error">
			<AppenderRef ref="Console" />
		</Root>
		<Logger name="com.netbuilder.jms.JmsListener" level="info" additivity="false">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="com.netbuilder.jms.Receiver" level="info" additivity="false">
			<AppenderRef ref="Console"/>
		</Logger>
	</Loggers>
</Configuration>